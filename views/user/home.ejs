<%- include('../layouts/header', { user, cartCount }) %>

<!-- Hero Section -->
<section class="bg-dark text-white py-5">
  <div class="container text-center">
    <h1 class="display-4 fw-bold">Welcome to UrbanEdge</h1>
    <p class="lead">Style meets comfort. Discover the latest fashion & lifestyle products curated just for you.</p>
    <a href="/products" class="btn btn-warning btn-lg mt-3">🛍️ Start Shopping</a>
  </div>
</section>

<!-- Featured Categories -->
<section class="shop-by-category-section py-5 bg-light">
  <div class="container">
    <h2 class="text-centerfw-bold mb-4">Shop by Category</h2>

     <!-- Horizontal Scroll Wrapper -->
    <div class="category-scroll d-flex overflow-auto px-2 gap-4">
      <% const categories = [
        { name: "Clothing", img: "/images/categories/Clothing.png" },
        { name: "Footwear", img: "/images/categories/Footwear.png" },
        { name: "Accessories", img: "/images/categories/Accessories.png" },
        { name: "Electronics", img: "/images/categories/Electronics.png" },
        { name: "Wearable Tech", img: "/images/categories/Wearables.png" },
        { name: "Lifestyle", img: "/images/categories/Lifestyle.png" },
        { name: "Women", img: "/images/categories/Women.png" }
      ]; %>

      <% categories.forEach(category => { %>
        <a href="/products?category=<%= encodeURIComponent(category.name) %>" class="category-card text-white text-decoration-none position-relative">
          <div class="category-background" style="background-image: url('<%= category.img %>');"></div>
          <div class="category-overlay d-flex align-items-center justify-content-center">
            <h4 class="fw-bold z-2"><%= category.name %></h4>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</section>

<!-- CTA Section with Trends -->
<section class="py-5 text-white text-center" style="background: linear-gradient(135deg, #845EC2, #D65DB1);">
  <div class="container">
    <h2 class="fw-bold mb-3">🔥 Trending on UrbanEdge</h2>
    <div class="d-flex justify-content-center flex-wrap gap-3">
      <span class="badge bg-light text-dark p-2">#StreetStyle</span>
      <span class="badge bg-light text-dark p-2">#SmartWearables</span>
      <span class="badge bg-light text-dark p-2">#BoldAccessories</span>
      <span class="badge bg-light text-dark p-2">#EcoFashion</span>
      <span class="badge bg-light text-dark p-2">#SummerEdit</span>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>