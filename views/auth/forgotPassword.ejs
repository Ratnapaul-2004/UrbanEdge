<%- include('../layouts/header', {user, cartCount}) %>

<div class="auth-container d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="card p-4 shadow" style="width: 100%;max-width: 400px;">
    <h2 class="mb-4 text-center">Forgot Password</h2>
    
    <form action="/forgot-password" method="POST" autocomplete="off">
      <div class="mb-3">
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="your@email.com"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
    </form>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (query && query.message) { %>
      <div class="alert alert-success"><%= query.message %></div>
    <% } %>
  </div>
</div>

<%- include('../layouts/footer') %>